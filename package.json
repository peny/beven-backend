{
  "name": "beven-backend",
  "version": "1.0.0",
  "description": "Backend for Beven budgeting app built with Fastify and Prisma",
  "main": "main.js",
  "scripts": {
    "start": "prisma generate && prisma db push --accept-data-loss && node main.js",
    "dev": "prisma generate && nodemon main.js",
    "build": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "dev:setup": "prisma generate && prisma db push",
    "deploy:build": "prisma generate && prisma migrate deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.4",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "node-cache": "^5.1.2",
    "prisma": "^5.7.1",
    "redis": "^5.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "budgeting",
    "fastify",
    "prisma",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ]
  }
}
